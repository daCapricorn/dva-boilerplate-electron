{
  "private": true,
  "author": {
    "name": "chencheng",
    "email": "sorrycc@gmail.com"
  },
  "scripts": {
    "start": "electron app/dist/main",
    "postinstall": "cd app && npm i && cd .. && npm run rebuild",
    "dev:renderer": "webpack-dev-server --mode development --config ./webpack.config.renderer.babel.js",
    "dev:main": "webpack -w --mode development --config ./webpack.config.main.babel.js",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "clean": "chmod u+x dist && rm -rf node_modules app/node_modules dist app/dist",
    "build": "webpack --mode production --config ./webpack.config.babel.js",
    "lint": "eslint --ext .js src test webpack.config.babel.js",
    "test": "mocha test/**/*-test.js --require babel-register --require ./test/setup --no-timeouts",
    "rebuild": "electron-rebuild -m ./app",
    "pack": "npm run build && npm run rebuild && build",
    "pack:dir": "npm run build && npm run rebuild && build --dir",
    "pack:justBuild": "build --dir",
    "precommit": "npm run lint"
  },
  "build": {
    "appId": "com.nbltrust.wookong-solo",
    "asar": false,
    "files": [
      "**/*",
      "dist/*"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg",
        "zip"
      ],
      "type": "distribution",
      "artifactName": "${name}_${version}.${ext}",
      "identity": "Yanfeng Chen (M5LYGNKFLB)"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-stage-0": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "af-webpack": "^1.2.6",
    "babel-eslint": "7.2.3",
    "babel-loader": "^8.0.4",
    "babel-plugin-dva-hmr": "^0.4.1",
    "babel-plugin-import": "^1.8.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "concurrently": "^3.6.1",
    "cssnano": "^4.1.7",
    "dva": "^2.4.1",
    "electron": "^2.0.6",
    "electron-builder": "^20.26.1",
    "electron-debug": "^1.1.0",
    "electron-dev": "^1.0.1",
    "electron-react-devtools": "^0.5.3",
    "electron-rebuild": "^1.4.0",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-compat": "^2.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-markdown": "^1.0.0-beta.6",
    "eslint-plugin-react": "^7.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-harddisk-plugin": "^1.0.1",
    "html-webpack-plugin": "^3.0.7",
    "mini-css-extract-plugin": "^0.4.5",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "react": "^16.4.0",
    "react-dev-utils": "^6.1.1",
    "react-dom": "^16.4.0",
    "redbox-react": "^1.5.0",
    "roadhog-api-doc": "^1.1.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.19.0",
